header.header
    nav.nav.nav--tours 
        a.nav__el(href="/") All tours 
    .header__logo
        img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user 
        if user
            a.nav__el.nav__el--logout log out 
            a.nav__el(href='#')
                img.nav__user-img(src=`img/users/${user.photo}` alt=`photo is ${user.name}`)
                span= user.name.split(' ')[0] 
        else
            a(href="/login" class="nav__el") Log in 
            a.nav__el.nav__el--cta(href="/signup") Sign up